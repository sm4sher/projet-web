{% extends 'base.html.twig' %}

{% block title %}PanierPlace index{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {{ include("panier_place/tableau_panier.html.twig") }}
    <form action="{{ path("commande_new") }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('validpanier') }}">
        <input type="submit" class="btn btn-success" value="Valider la commande">
    </form>
    <form action="{{ path("panier.empty") }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('viderpanier') }}">
        <input type="submit" class="btn btn-success" value="Vider le panier">
    </form>
{% endblock %}
