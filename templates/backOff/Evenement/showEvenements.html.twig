{% extends "base.html.twig" %}
{% block body %}
    <div class="row">
        <a href="{{ path('evenement.add') }}"  class="btn btn-primary m-1 p-1"> Ajouter un evenement </a>

        <table class="table table-bordered">
            <caption>Recapitulatifs des evenements</caption>
            <thead>
            <tr><th>nom</th><th>id</th><th>categorie</th><th>prix</th><th>nom photo</th><th>photo</th>
                <th>op√©ration</th>
            </tr>
            </thead>
            <tbody>
            {% for evenement in evenements if evenement is not empty %}

                <tr>
                    <td>{{evenement.nom}}</td><td>{{evenement.id}}</td><td>{{evenement.categorie.libelle  | default('pas de type')}}</td>
                    <td>{{evenement.prix | default('gratuit (ou pas de prix)')}}</td><td>
                        {{evenement.photo}}</td><td>
                        <img style="width:40px;height:40px" src="{{asset('images/')}}{{evenement.photo}}" alt="image de {{evenement.nom}}" >
                    </td>
                    <td>
                        <a href="{{ path('evenement.edit', {id: evenement.id}) }}"  class="btn btn-primary m-1 p-1">modifier</a>
                        <a href="{{ path('evenement.delete', {id: evenement.id}) }}"  class="btn btn-primary m-1 p-1">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}