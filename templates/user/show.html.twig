{% extends 'base.html.twig' %}

{% block title %}Profil - {{ user.username }}{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {% if full_profile %}
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.ville }}</td>
                </tr>
                <tr>
                    <th>CodePostal</th>
                    <td>{{ user.codePostal }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.adresse }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% if full_profile %}
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('user_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
