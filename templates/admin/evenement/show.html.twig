{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ evenement.photo }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ evenement.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nombre de places</th>
                <td>{{ evenement.nombrePlaces }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ evenement.prix }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if is_granted('ROLE_ADMIN') %} (role : Admin )
            <a href="{{ path('evenement_edit', {'id': evenement.id}) }}"><button class="btn btn-secondary">Modifier</button></a>

            {{ include('admin/evenement/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
    <a href="{{ path('evenement_index') }}"><button class="btn btn-secondary">Retour</button></a>
{% endblock %}
